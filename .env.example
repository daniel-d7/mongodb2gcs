# MongoDB to GCS Pipeline Configuration
# Copy this file to .env and update with your actual values

# MongoDB Configuration
# Option 1: MongoDB URI with authentication (recommended)
MONGO_URI=mongodb://user:password@localhost:27017/public?authSource=admin

# Option 2: MongoDB URI without credentials (use separate auth fields)
# MONGO_URI=mongodb://localhost:27017/
# MONGO_USERNAME=your_username
# MONGO_PASSWORD=your_password
# MONGO_AUTH_SOURCE=admin

MONGO_DB=public
MONGO_COLLECTION=glamira

# Google Cloud Configuration
GCP_PROJECT_ID=lateral-boulder-317012
GCS_BUCKET=glamira_raw_bucket
GCS_PREFIX=glamira_raw_export/

# Processing Configuration
CHUNK_SIZE=100000
MAX_WORKERS=4
OUTPUT_FORMAT=parquet
COMPRESSION=gzip

# Memory Management
MAX_MEMORY_USAGE_GB=8.0

# Error Handling
MAX_RETRIES=3
RETRY_DELAY=5

# Redis Configuration (for progress tracking)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=mongo2gcs.log

# Google Cloud Service Account (optional, can also use gcloud auth)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
